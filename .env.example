# ===========================================
# GPW TRADING ADVISOR - ENVIRONMENT CONFIG
# ===========================================
# 
# LEGEND:
# [REQUIRED] - Must be set for the application to work
# [OPTIONAL] - Can be left as default or customized as needed
# [DEV-ONLY] - Only needed in development environment
#
# ===========================================

# Django Configuration [REQUIRED]
SECRET_KEY=change-this-secret-key-in-production-very-long-and-secure-key-123456789
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DJANGO_SETTINGS_MODULE=gpw_advisor.settings

# Port Configuration [OPTIONAL] - Used by docker-compose
WEB_PORT=8000
REDIS_PORT=6379

# Docker Configuration [OPTIONAL] - For cross-platform compatibility
# Set to your user ID (run `id -u` on Linux/macOS)
USER_ID=1000
# Set to your group ID (run `id -g` on Linux/macOS)
GROUP_ID=1000

# Database Configuration [REQUIRED] - PostgreSQL recommended for production
DB_ENGINE=django.db.backends.postgresql
DB_NAME=gpw_advisor_db
DB_USER=gpw_user
DB_PASSWORD=secure_db_password_change_this
DB_HOST=localhost
DB_PORT=5432

# For development with SQLite [DEV-ONLY] - Uncomment if needed
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Redis Configuration [REQUIRED] - For caching and Celery
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# Celery Configuration [REQUIRED] - For background tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Telegram Bot Configuration [OPTIONAL] - For notifications
# To get TELEGRAM_DEFAULT_CHAT_ID:
# 1. Send a message to your bot
# 2. Visit: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 3. Look for "chat":{"id": YOUR_CHAT_ID} in the response
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEFAULT_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook/

# Email Configuration [OPTIONAL] - For email notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Trading & Scraping Configuration [OPTIONAL] - System behavior
TRADING_HOURS_START=09:00
TRADING_HOURS_END=17:30
SCRAPING_INTERVAL_MINUTES=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=30

# API Keys [OPTIONAL] - External services
# ALPHA_VANTAGE_API_KEY=your_api_key_here
# POLYGON_API_KEY=your_api_key_here

# Security Configuration [REQUIRED] - Production deployment
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Static Files Configuration [REQUIRED] - File serving
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/

# Logging Configuration [REQUIRED] - System monitoring
LOG_LEVEL=INFO
# Set to True for file logging in development, False for console logging in Docker
USE_FILE_LOGGING=False
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Development Settings [DEV-ONLY] - Only for development
USE_DEBUG_TOOLBAR=False
INTERNAL_IPS=127.0.0.1
